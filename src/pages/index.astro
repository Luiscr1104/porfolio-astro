---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import SocialPill from "../components/SocialPill.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import MailIcon from "../components/icons/MailIcon.astro";
import Experience from "../components/Experience.astro";
import SectionContainer from "../components/SectionContainer.astro";
import ExperienceIcon from "../components/icons/ExperienceIcon.astro";
---

<Layout
  title="Porfolio de Luis R Zúñiga S - Desarrollador y Programador Web con +5 años de experiencia"
  description="Desarrollador y Programador Web con +5 años de experiencia en desarrollo de sitios únicos."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-24">
      <img
        src="/avatar.png"
        alt="Luis R Zúñiga Sánchez"
        class="size-20 rounded-full"
      />
      <h1
        class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-8"
      >
        Hey soy Luis Roberto
        <a
          target="_blank"
          rel="noopener noreferrer"
          href="https://www.linkedin.com/in/luis-z%C3%BA%C3%B1iga-s%C3%A1nchez-812017190/"
          class="flex justify-center items-center px-4"
        >
          <Badge>Disponible para trabajar</Badge>
        </a>
      </h1>
      <h2 class="text-xl lg:text-2xl text-pretty max-w-[700px]">
        <span class="text-white"> +5 años de experiencia.</span>
        <span class="text-yellow-200/90">
          Desarollador Web y Aplicaciones.</span
        ><span class="text-red-200/90"> De La Fortuna, Costa Rica</span>. <span
          class="opacity-75 text-white"
        >
          Especializado en desarrollo de sitios únicos</span
        >
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill
          href="https://www.linkedin.com/in/luis-z%C3%BA%C3%B1iga-s%C3%A1nchez-812017190/"
        >
          <Linkedin class="size-4 md:size-6" /> Linkedin
        </SocialPill>
        <SocialPill href="https://github.com/Luiscr1104">
          <GitHubIcon class="size-4 md:size-6" /> GitHub
        </SocialPill>
        <SocialPill href="mailto:luiscr1104@gmail.com">
          <MailIcon class="size-4 md:size-6" /> luiscr1104@gmail.com
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2
        class="text-white text-2xl font-semibold mb-6 flex gap-x-3 items-center"
      >
        <ExperienceIcon class="size-7" /> Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>
  </main>
</Layout>
