---
import NextIcon from "./icons/NextIcon.astro";
import TailwindIcon from "./icons/TailwindIcon.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextIcon,
  },
  REACT_NATIVE: {
    name: "React Native",
    class: "bg-black text-white",
    icon: NextIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-black text-white",
    icon: TailwindIcon,
  },
};

const PROJECTS = [
  {
    title: "Ecoinmo",
    description:
      "Ecoinmo es una aplicación móvil que permite a los usuarios revisar sus estados de cuenta, generar proyecciones, y más.",
    link: "https://play.google.com/store/apps/details?id=com.grupoecoquintas.EcoApp&pcampaignid=web_share",
    tags: [TAGS.REACT_NATIVE, TAGS.NEXT, TAGS.TAILWIND],
    image: "/projects/ecoinmo.webp",
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row">
        {tags.map((tag) => (
          <li>
            <span
              class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class}`}
            >
              <tag.icon class="size-5" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Caputra de pantalla del proyecto ${image}`}
      />
    </article>
  ))
}
